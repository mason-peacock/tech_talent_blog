<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= post.blog_entry %></td>
        <td><%= link_to 'Show', post, class: "btn btn-primary", style: "color:white; font-family:georgia; float:right;" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning", style: "color: white; font-family:georgia; float:right;" %></td>
        <td><%= link_to 'Delete', post, class: "btn btn-danger", style: "color: white; font-family:georgia; float:right;", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-info", style: "color:#696969;font-family:georgia; text-shadow:1px 1px 1px; box-shadow:1px 1px 1px;" %>
